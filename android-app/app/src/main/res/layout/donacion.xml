<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#E7CF8A">

    <!-- Cabecera de la tabla -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/fondoTituloTabla">

        <TextView
            android:id="@+id/tvTituloNombre"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del Proyecto"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="8dp"/>

        <TextView
            android:id="@+id/tvTituloMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto"
            android:textSize="16sp"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:padding="8dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@android:color/white"
        android:layout_marginTop="1dp"
        android:elevation="2dp">

        <TextView
            android:id="@+id/tvNombreProyecto"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Nombre del Proyecto"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:background="@color/BeigeClaro"/>

        <TextView
            android:id="@+id/tvMonto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monto"
            android:textSize="16sp"
            android:padding="8dp"
            android:textColor="@color/black"
            android:background="@color/BeigeClaro"/>
    </LinearLayout>
</LinearLayout>